mixin arrow()
	.swiper-button-hand.swiper-button-hand-prev.swiper-button-prev
		+icon('chevron-left')
	.swiper-button-hand.swiper-button-hand-next.swiper-button-next
		+icon('chevron-right')
//- /arrow for swiper-slider

mixin btn-round(l, i)
	+b.btn-round(href=`${l}`)
		+icon(`${i}`)
//- rounded buttons for video and social

